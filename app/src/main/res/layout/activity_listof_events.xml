<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListofEvents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleodevent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:layout_marginVertical="10dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/colorblue"/>

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"

            android:background="@drawable/custom_serchview"
            android:queryHint="Search Event"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <Spinner
                android:layout_width="115dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_serchview"
                android:entries="@array/cities" />

            <Spinner
                android:layout_width="115dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/custom_serchview"
                android:entries="@array/eventstatus"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_applybtn"
                android:text="Apply"
                android:textColor="@color/colorwhite"/>

        </LinearLayout>

</LinearLayout>
    <GridView
        android:id="@+id/eventlistgrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>