<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsAboutEvents">

    <ScrollView
        android:id="@+id/eventdetailcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="225dp">

                    <ImageView
                        android:id="@+id/maineventimage"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:divider="@color/colordarksilver"
                    android:showDividers="end">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                        android:id="@+id/maineventname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"

                        android:text="abc"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/colorblue"
                        android:textSize="23dp"/>

                    </HorizontalScrollView>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:divider="@color/colordarksilver"
                android:showDividers="end">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="65dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/callredirect"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            app:cardCornerRadius="40dp"
                            android:background="@color/colorblue"
                            android:layout_marginVertical="10dp"
                            android:layout_marginHorizontal="23dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_baseline_phone_24"
                                android:layout_margin="10dp"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="65dp"
                        android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mailredirect"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:cardCornerRadius="22dp"
                        android:background="@color/colorwhite"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="23dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_email_24"
                        android:layout_margin="10dp"
                        />
                    </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="65dp"
                        android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/savedbtn"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:cardCornerRadius="22dp"
                        android:background="@color/colorwhite"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="23dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_bookmark_border_24"
                            android:layout_margin="10dp"
                            />
                    </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="65dp"
                        android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/shareredirect"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:cardCornerRadius="40dp"
                        android:background="@color/colorwhite"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="23dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_share_24"
                            android:layout_margin="10dp"
                            />
                    </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="vertical"
                android:divider="@color/colordarksilver"
                android:showDividers="end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="horizontal"
                android:divider="@color/colordarksilver"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="125dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:layout_marginHorizontal="5dp"
                        android:drawableTint="@color/colorblue"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:textSize="15dp"
                        android:drawablePadding="5dp"
                        android:layout_marginVertical="5dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorblue"/>

                    <TextView
                        android:id="@+id/maineventlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/colorblack"
                        android:text="Location"
                        android:textAlignment="viewStart"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="125dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date And Time"
                        android:drawableTint="@color/colorblue"
                        android:drawableLeft="@drawable/ic_baseline_access_time_24"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="5dp"
                        android:drawablePadding="5dp"
                        android:layout_marginVertical="5dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorblue"/>

                    <TextView
                        android:id="@+id/maineventdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/colorblack"
                        android:text="Date"
                        android:textAlignment="viewStart"/>

                    <TextView
                        android:id="@+id/maineventtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/colorblack"
                        android:text="05:00 p.m. to 08:30 p.m."
                        android:textAlignment="viewStart"/>

                </LinearLayout>
            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Details"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorblue"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="200dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/bookseatbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Book your Seat"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorblue"
        android:textColor="@color/colorwhite"/>

</RelativeLayout>