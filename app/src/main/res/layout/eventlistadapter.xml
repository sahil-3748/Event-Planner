<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:cardCornerRadius="18dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="17dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="187dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/imageforevent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"/>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_dateborder"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dateforevent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:text="DateoftheEvent"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="25dp"
                        android:textColor="@color/colorwhite"
                        android:textStyle="bold"/>

                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/nameforevent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eventname"
                android:textColor="@color/colorblue"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textAlignment="viewStart"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/placeforevent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eventname"
                android:textColor="@color/colordarksilver"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textAlignment="viewStart"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>