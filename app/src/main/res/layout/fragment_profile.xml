<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="80dp">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@color/colorblack"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="vertical"
           android:layout_marginHorizontal="5dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="My Artistic Profile"
               android:textColor="@color/colorblue"
               android:layout_marginTop="7dp"
               android:drawableTint="@color/colorblue"
               android:layout_marginLeft="205dp"
               android:textSize="15dp"
               android:drawableEnd="@drawable/ic_baseline_chevron_right_24"/>

       </LinearLayout>

   </FrameLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="45dp"
            app:cardCornerRadius="55dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorblue"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sahil Chudasama"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorblue"
                android:textAlignment="viewStart"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="7dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ahmedadabad"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:drawableTint="@color/colordarksilver"
                android:textSize="15dp"
                android:textColor="@color/colordarksilver"
                android:textAlignment="viewStart"
                android:drawablePadding="2dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="7dp"/>

        </LinearLayout>

    </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Story Highlights"
            android:textSize="17dp"
            android:textColor="@color/colorblack"
            android:textAlignment="viewStart"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keep Your Favorite Movements saved in your profile."
            android:textSize="12dp"
            android:textColor="@color/colordarksilver"
            android:textAlignment="viewStart"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_height="85dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:textSize="17dp"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/colorblack"
            android:textAlignment="viewStart" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:text="Name :"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colordarksilver"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:text="Email :"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colordarksilver"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:text="Mobile :"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colordarksilver"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:text="Birthdate :"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colordarksilver"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:text="Gender :"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colordarksilver"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Address :"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colordarksilver"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch to Bussiness User"
            android:drawableLeft="@drawable/ic_baseline_supervised_user_circle_24"
            android:drawableTint="@color/colorblack"
            android:drawablePadding="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_centerInParent="true"
            android:layout_marginVertical="2.5dp"
            android:textColor="@color/colorblack"
            android:textSize="17dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail About Planed Event"
            android:layout_marginHorizontal="15dp"
            android:drawableLeft="@drawable/ic_baseline_analytics_24"
            android:drawableTint="@color/colorblack"
            android:drawablePadding="10dp"
            android:textAlignment="viewStart"
            android:layout_centerInParent="true"
            android:layout_marginBottom="2.5dp"
            android:textColor="@color/colorblack"
            android:textSize="17dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share  Your Event with Friends"
            android:layout_marginHorizontal="15dp"
            android:drawableLeft="@drawable/ic_baseline_share_24"
            android:drawableTint="@color/colorblack"
            android:drawablePadding="10dp"
            android:textAlignment="viewStart"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:textColor="@color/colorblack"
            android:textSize="17dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Event Planner App"
            android:layout_marginHorizontal="15dp"
            android:textAlignment="viewStart"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawableTint="@color/colorblack"
            android:drawablePadding="10dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorblack"
            android:textSize="17dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate Event Planner App"
            android:layout_marginHorizontal="15dp"
            android:textAlignment="viewStart"
            android:drawableLeft="@drawable/ic_baseline_star_24"
            android:drawableTint="@color/colorblack"
            android:drawablePadding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:textColor="@color/colorblack"
            android:textSize="17dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact us"
            android:layout_marginHorizontal="15dp"
            android:textAlignment="viewStart"
            android:drawableLeft="@drawable/ic_baseline_help_outline_24"
            android:drawableTint="@color/colorblack"
            android:drawablePadding="10dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorblack"
            android:textSize="17dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:drawableLeft="@drawable/ic_baseline_settings_24"
            android:drawableTint="@color/colorblack"
            android:drawablePadding="10dp"
            android:layout_marginHorizontal="15dp"
            android:textAlignment="viewStart"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorblack"
            android:textSize="17dp"/>

    </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:background="@drawable/custom_applybtn"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/colorwhite"
            />

    </LinearLayout>

</ScrollView>