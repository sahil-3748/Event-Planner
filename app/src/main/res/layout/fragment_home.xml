<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_serchview"
            android:queryHint="Search Event"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <Spinner
                android:layout_width="115dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_serchview"
                android:entries="@array/cities" />

            <Spinner
                android:layout_width="115dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/custom_serchview"
                android:entries="@array/eventstatus"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_applybtn"
                android:text="Apply"
                android:textColor="@color/colorwhite"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/openmictxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open-mic Events"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorblack"
                    android:textAlignment="viewStart"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/openmiceventlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorblue"
                    android:layout_centerVertical="true"
                    android:drawableTint="@color/colorblue"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:textSize="17dp"
                    android:text="view all"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/openmiceventlist"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:orientation="horizontal"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
