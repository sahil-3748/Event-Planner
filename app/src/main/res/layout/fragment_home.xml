        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exhibitionslist"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="horizontal"/>

    </LinearLayout>

        <LinearLayout
